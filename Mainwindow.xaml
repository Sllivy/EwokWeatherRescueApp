<Window x:Class="EwokWeatherRescueApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ewok Weather Rescue" Height="450" Width="800">
    <Grid>
        <Grid>
            <TextBox x:Name="LocationInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10"/>
            <TextBlock Text="Enter Location" Foreground="Gray" Margin="10,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" IsHitTestVisible="False" />
        </Grid>
        <Button Content="Get Weather" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Click="GetWeatherButton_Click"/>

        <TextBlock Text="Weather Information" HorizontalAlignment="Left" Margin="10,100,0,0"/>
        <TextBlock Text="{Binding Weather.CurrentTemperature}" HorizontalAlignment="Left" Margin="10,130,0,0"/>
        <TextBlock Text="{Binding Weather.HighTemperature}" HorizontalAlignment="Left" Margin="10,160,0,0"/>
        <TextBlock Text="{Binding Weather.LowTemperature}" HorizontalAlignment="Left" Margin="10,190,0,0"/>
        <TextBlock Text="{Binding Weather.Condition}" HorizontalAlignment="Left" Margin="10,220,0,0"/>

        <Image Source="C:\Users\Senior\Pictures\Screenshots\images.jpg" Width="100" Height="100" HorizontalAlignment="Right" VerticalAlignment="Top" />
    </Grid>
</Window>
